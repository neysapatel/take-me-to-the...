<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/border"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvDestination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="28dp"
        android:text="city"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_marginStart="47dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@+id/tvDestination"
        android:text="74°F" />

    <TextView
        android:id="@+id/tvFeelsLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="31dp"
        android:layout_toEndOf="@+id/tvTemp"
        android:text="feels like 70°F" />

    <TextView
        android:id="@+id/tvCondition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDestination"
        android:layout_marginStart="11dp"
        android:layout_marginTop="42dp"
        android:layout_toEndOf="@+id/ivIcon"
        android:text="cloudy" />

    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tvDestination"
        android:layout_alignStart="@+id/tvDestination"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="23dp"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvWind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivIcon"
        android:layout_alignStart="@+id/ivIcon"
        android:layout_marginStart="6dp"
        android:layout_marginTop="28dp"
        android:text="wind: 10 mph NE" />

    <TextView
        android:id="@+id/tvPercipitation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvWind"
        android:layout_alignStart="@+id/tvWind"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:text="precipitation: 5 in" />

    <TextView
        android:id="@+id/tvUv"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCondition"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="88dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="83dp"
        android:layout_toEndOf="@+id/tvWind"
        android:text="UV: 0" />

    <TextView
        android:id="@+id/tvHumidity"
        android:layout_width="97dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUv"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="84dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="82dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/tvPercipitation"
        android:text="humidity: 43" />

</RelativeLayout>